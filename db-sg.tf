resource "aws_security_group" "kiran_db_sg" {
  name   = "kiran-db-sg"
  vpc_id = aws_vpc.kiran_vpc.id

  ingress {
    from_port       = 3306
    to_port         = 3306
    protocol        = "tcp"
    security_groups = [aws_security_group.kiran_web_sg.id]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
